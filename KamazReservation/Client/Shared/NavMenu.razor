<MudAppBar Elevation="1" Color="Color.Info">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Kamaz</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Icon="@Icons.Material.Filled.Home" Match="NavLinkMatch.All" Href="/">Главная страница</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Filled.LocalParking" Match="NavLinkMatch.All" Href="/parking">Парковка</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Filled.Person" Match="NavLinkMatch.All" Href="/profile">Личный кабинет</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    
@code{
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }
}